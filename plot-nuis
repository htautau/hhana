        if nuis in cba_data_12_vbf_lowdr.keys():
            cba_graph_12_vbf_lowdr = make_graph(cba_data_12_vbf_lowdr[nuis], cba_nominal_nll_12_vbf_lowdr,
                                                    drawstyle='L', color='blue', linestyle='dashed', title='CBA VBF LOWDR 2012')
            graphs.append(cba_graph_12_vbf_lowdr)
        if nuis in cba_data_11_vbf_lowdr.keys():
            cba_graph_11_vbf_lowdr = make_graph(cba_data_11_vbf_lowdr[nuis], cba_nominal_nll_11_vbf_lowdr,
                                                    drawstyle='L', color='blue', linestyle='longdash', title='CBA VBF LOWDR 2011')
            graphs.append(cba_graph_11_vbf_lowdr)

        if nuis in cba_data_12_vbf_highdr_tight.keys():
            cba_graph_12_vbf_highdr_tight = make_graph(cba_data_12_vbf_highdr_tight[nuis], cba_nominal_nll_12_vbf_highdr_tight,
