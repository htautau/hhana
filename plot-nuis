                                                    drawstyle='L', color='red', linestyle='longdash', title='CBA BOOSTED LOOSE 2011')
            graphs.append(cba_graph_11_boosted_loose)
        if nuis in cba_data_12_boosted_tight.keys():
            cba_graph_12_boosted_tight = make_graph(cba_data_12_boosted_tight[nuis], cba_nominal_nll_12_boosted_tight,
                                                    drawstyle='L', color='pink', linestyle='dashed', title='CBA BOOSTED TIGHT 2012')
            graphs.append(cba_graph_12_boosted_tight)
        if nuis in cba_data_11_boosted_tight.keys():
            cba_graph_11_boosted_tight = make_graph(cba_data_11_boosted_tight[nuis], cba_nominal_nll_11_boosted_tight,
