            graphs.append(cba_graph_12_vbf_highdr_tight)
        if nuis in cba_data_12_vbf_highdr_loose.keys():
            cba_graph_12_vbf_highdr_loose = make_graph(cba_data_12_vbf_highdr_loose[nuis], cba_nominal_nll_12_vbf_highdr_loose,
